<%- include ("partials/head.ejs") %>    
<%- include ("partials/nav.ejs") %>
    
    <main>
        <h1><%= about %> </h1>
        <hr>
        <div id="contenedor-productos">
        <!-- Aca iteramos el array de productos que pasamos desde el endpoint -->
        <% productos.forEach(producto => { %>
                    <div class="card-producto <%= producto.activo == 0 ? 'desactivado' : '' %>">
                    <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>">
                    <h5><%= producto.nombre %></h5>
                    <p>ID: <%= producto.id %></p>
                    <p>$<%= producto.precio %></p>
                </div>
        <%  }) %>
        </div>
    </main> 

